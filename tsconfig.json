{
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [ "es2015", "DOM", "es6" ],
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [ "src/*" ],
      "custom_modules/*": [
        "src/custom_modules/*"
      ]
    }
  },
  "include": [
    "./src/index.tsx",
    "./backend/**/*",
    "./custom.d.ts"
  ]
}
